<% if @view_in_config && @erb_code %>
  <%= render inline: @erb_code %>
  
  <% else %>
<%= simple_form_for @part do |f| %> 

  <%= f.input :customer_name, :label => t('Customer'), :readonly => true, :input_html => {:value => @customer.name} %>
  <%= f.input :project_name, :label => t('Project Name'), :readonly => true, :input_html => {:value => @project.name} %>
  <%= f.input :name, :label => t('Part Name'), :readonly => readonly?(@part, 'name') %>  
  <%= f.input :part_num, :label => t('Part#'), :readonly => readonly?(@part, 'part_num') %>
  <%= f.input :part_spec, :label => t('Spec'), :input_html => {:rows => 2}, :readonly => readonly?(@part, 'part_spec') %>
  <%= f.input :qty, :label => t('Qty'), :readonly => readonly?(@part, 'qty') %>
  <%= f.input :unit, :label => t('Qty Unit'), :collection => @qty_unit, :readonly => readonly?(@part, 'unit') %>
  <%= f.input :unit_price, :label => t('Unit Price($)'), :readonly => readonly?(@part, 'unit_price') %>
  <%= f.input :shipping_cost, :label => t('Shipping Cost($)'), :readonly => readonly?(@part, 'shipping_cost') %>
  <%= f.input :tax, :label => t('Tax($)'), :readonly => readonly?(@part, 'tax') %>
  <%= f.input :misc_cost, :label => t('Misc Cost($)'), :readonly => readonly?(@part, 'misc_cost') %>
  <%= f.input :total, :label => t('Total($)'), :readonly => true %>
  <%= f.input :order_date, :label => t('Order Date'), :as => :string, :readonly => readonly?(@part, 'order_date') %>
  <%= f.input :received, :label => t("Received?"), :as => :boolean unless readonly?(@part, 'received') %>
  <%= f.input :received_noupdate, :label => t("Received?"), :readonly => true, :input_html => {:value => @part.received ? t('Yes') : t('No') } if readonly?(@part, 'received') %>
  <%= f.input :status_id, :label => t('Supplying Status'), :collection => Commonx::MiscDefinition.where(:for_which => 'part_purchasing_status') unless readonly?(@part, 'status_id') %>
  <%= f.input :status_name, :label => t('Supplying Status'), :readonly => true, :input_html => {:value => @part.status.name} if @part.status_id.present? && readonly?(@part, 'status_id') %>
  <%= f.input :status_name, :label => t('Supplying Status'), :readonly => true, :input_html => {:value => ''} if @part.status_id.blank? && readonly?(@part, 'status_id') %>
  <%= f.input :purchasing_id, :label => t('Purchasing'), :collection => Authentify::User.where(:status => 'active'), :include_blank => true unless readonly?(@part, 'purchasing_id') %>
  <%= f.input :purchasing_name, :label => t('Purchasing'),  :readonly => true, :input_html => {:value => @part.purchasing.name} if @part.purchasing_id.present? && readonly?(@part, 'purchasing_id') %>
  <%= f.input :supplier_id, :label => t('Supplier'), :collection => SuppliedPartx.supplier_class.where(:active => true).order('id') unless readonly?(@part, 'supplier_id') %>
  <%= f.input :supplier_name, :label => t('Supplier'),  :readonly => true, :input_html => {:value => @part.supplier.name} if @part.supplier_id.present? && readonly?(@part, 'supplier_id') %>
  <%= f.input :manufacturer_id, :label => t('Manufacturer'), :collection => SuppliedPartx.manufacturer_class.where(:active => true).order('id') unless readonly?(@part, 'manufacturer_id') %>
  <%= f.input :manufacturer_name, :label => t('Manufacturer'), :readonly => true, :input_html => {:value => @part.manufacturer.name} if @part.manufacturer_id.present? && readonly?(@part, 'manufacturer_id') %>  
  <%= f.input :receiving_date, :label => t('Receiving Date'), :as => :string %>
  <%= f.input :actual_receiving_date, :label => t("Received Date"), :as => :string %> 
  <%= f.input :void_noupdate, :label => t('Void'), :readonly => true, :required => false, :input_html => {:value => @part.void} if readonly?(@part, 'void') %>
  <%= f.input :void, :label => t('Void'), :input_html => {:value => @part.void} unless readonly?(@part, 'void') %>
  <%= f.input :wf_state_noupdate, :label => t('WF State'), :readonly => true, :input_html => {:value => I18n.t(@part.wf_state.titleize)} %>
  <%= f.input :purchase_order_id, :label => t('Purchase Order'), :readonly => true, :input_html => {:value => @part.purchase_order_id} %>
  <%= f.input :requested_by_name, :label => t('Requested By'), :readonly => true, :input_html => {:value => @part.requested_by.name} if @part.requested_by_id.present? %>
  <%= f.input :brief_note, :label => t('Brief Note'), :readonly => readonly?(@part, 'brief_note'), :input_html => {:rows => 2} %>
    
  <%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
  <%= f.button :submit, t('Save'), :class => BUTTONS_CLS['action'] %>  
<% end %>  

<% end %>
